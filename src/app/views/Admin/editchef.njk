{% extends "Admin/layout.njk" %}
{% block content %}
    <div class="create_content">
        <div class="forms">
            <form action="/admin/Chefs?_method=PUT" method="post">
                <div class="create_header">
                    <p>Criando Chef</p>
                    <input type="hidden" name="id" value="{{Chef.id}}">
                    <button type="submit">Salvar Chef</button>
                </div>
                <div class="fields">
                    <div class="item">
                        <p>Nome do Chef</p>
                        <div>
                            <input type="text" name="nome_chef" value="{{ Chef.name }}">
                        </div>
                    </div>
                    <div class="item">
                        <div class="titles_upload">
                         <p>Adicionar</p>
                         <p>Avatar Selecionado</p>
                        </div>
                        <div >
                            <div class="photos">
                                <div id="photos-upload">
                                    <input type="file" name="photos" id="photos-input" multiple="multiple" onchange="PhotosUpload.handleFileInput(event)" accept="image/*">
                                     <i class="material-icons">add</i>
                                </div>
                                <div id="photos-preview-select">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <form id="form-delete-chef" action="/admin/Chefs?_method=DELETE" method="POST">
                <input type="hidden" name="id" value="{{ Chef.id }}">
                <button type="submit">Deletar</button>
            </form>
        </div>
    </div>
    <script src="/scripts/script_file_chef.js"></script>
{% endblock %}